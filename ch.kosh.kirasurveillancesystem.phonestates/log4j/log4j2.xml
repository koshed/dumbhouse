<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
  <Appenders> 
    <File name="FileLogger" fileName="phoneScan.log" append="true"> 
      <PatternLayout pattern="%d %t %-5p %c{2} - %m%n"/> 
    </File> 
    <Console name="STDOUT" target="SYSTEM_OUT"> 
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/> 
    </Console> 
  </Appenders> 
  <Loggers> 
    <Logger name="ch.kosh.kirasurveillancesystem.phonescanner" level="debug"> 
      <AppenderRef ref="FileLogger"/>  
    </Logger> 
    <Logger name="ch.kosh.kirasurveillancesystem.phonestates" level="debug"> 
      <AppenderRef ref="FileLogger"/>  
    </Logger> 
    <Root level="info"> 
      <AppenderRef ref="STDOUT"/>
    </Root> 
  </Loggers> 
</Configuration>